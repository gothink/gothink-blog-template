---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import BlogInfo from '../components/BlogInfo.astro';

type Props = CollectionEntry<'blog'>['data'];

const { author, description, title, subtitle, pubDate, updatedDate, heroImage, readingTime } = Astro.props;
---

<BaseLayout title={title} description={description} image={heroImage}>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.0/dist/katex.min.css" integrity="sha384-Xi8rHCmBmhbuyyhbI88391ZKP2dmfnOl4rT9ZfRI7mLTdk1wblIUnrIq35nqwEvC" crossorigin="anonymous">
	<article class="max-w-3xl mx-auto prose sm:prose-lg prose-slate prose-img:mx-auto prose-headings:font-serif">
		<div class="text-center font-serif">
			<h1 class="font-serif">{title}</h1>
			<h3 class="italic text-text">{subtitle}</h3>
		</div>
		{heroImage && <img class="w-100" src={heroImage} alt="" />}
		<div class="flex flex-1 flex-row flex-wrap justify-center items-center gap-x-4">
			<BlogInfo author={author} pubDate={pubDate} updatedDate={updatedDate} readingTime={readingTime} />
		</div>
		<hr class="mt-2"/>
		<slot />
	</article>
</BaseLayout>